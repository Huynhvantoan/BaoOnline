<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rootView"
    android:background="#64000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_download"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/title_dialog"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/title_dialog"/>
        <LinearLayout
            android:id="@+id/contentDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <com.toan_itc.baoonline.progressbar_dialog.Progressbar.ProgressBar_custom
                android:id="@+id/progressBar"
                android:layout_width="80dp"
                android:layout_marginLeft="15dp"
                android:layout_height="80dp"
                android:background="@color/myPrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:text="@string/dialog_loading"
                android:textSize="18sp"
                android:textColor="@color/my_dialogColor"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>